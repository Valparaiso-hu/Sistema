<script>
const btnRegistrar = document.getElementById("btnRegistrar");
const btnBuscar = document.getElementById("btnBuscar");
const formVehiculo = document.getElementById("formVehiculo");
const tabla = document.getElementById("tablaVehiculos");

// üîπ Actualiza la tabla
function actualizarTabla(filtro = "") {
  const vehiculos = JSON.parse(localStorage.getItem("vehiculos")) || [];
  tabla.innerHTML = `
    <tr>
      <th>RUT</th>
      <th>Nombre</th>
      <th>P.P.U</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Color</th>
      <th>A√±o</th>
      <th>Acciones</th>
    </tr>
  `;

  vehiculos
    .filter(v =>
      v.placa.toLowerCase().includes(filtro.toLowerCase()) ||
      v.modelo.toLowerCase().includes(filtro.toLowerCase()) ||
      v.rut.toLowerCase().includes(filtro.toLowerCase()) ||
      v.nombre.toLowerCase().includes(filtro.toLowerCase())
    )
    .forEach((v, i) => {
      const fila = tabla.insertRow(-1);
      fila.insertCell(0).innerText = v.rut;
      fila.insertCell(1).innerText = v.nombre;
      fila.insertCell(2).innerText = v.placa;
      fila.insertCell(3).innerText = v.marca;
      fila.insertCell(4).innerText = v.modelo;
      fila.insertCell(5).innerText = v.color;
      fila.insertCell(6).innerText = v.anio;

      // üîπ Bot√≥n eliminar con contrase√±a
      const celdaAccion = fila.insertCell(7);
      const btnEliminar = document.createElement("button");
      btnEliminar.textContent = "üóë Eliminar";
      btnEliminar.className = "btn-delete";
      btnEliminar.onclick = () => eliminarVehiculo(i, v.placa);
      celdaAccion.appendChild(btnEliminar);
    });
}

// üîπ Eliminar veh√≠culo con contrase√±a
function eliminarVehiculo(index, placa) {
  const vehiculos = JSON.parse(localStorage.getItem("vehiculos")) || [];
  const clave = prompt("Ingrese la contrase√±a para eliminar este veh√≠culo:");
  
  if (clave !== "Estrella0703") {
    alert("‚ùå Contrase√±a incorrecta. No se elimin√≥ el veh√≠culo.");
    return;
  }

  const confirmar = confirm(`¬øSeguro que deseas eliminar el veh√≠culo con P.P.U ${placa}?`);
  if (!confirmar) return;

  vehiculos.splice(index, 1);
  localStorage.setItem("vehiculos", JSON.stringify(vehiculos));
  actualizarTabla();
  alert(`‚úÖ Veh√≠culo ${placa} eliminado correctamente.`);
}

// üîπ Mostrar formulario con clave
btnRegistrar.addEventListener("click", () => {
  const clave = prompt("Ingrese la clave para registrar veh√≠culo:");
  if (clave === "Estrella2010") {
    formVehiculo.style.display = "block";
    formVehiculo.scrollIntoView({ behavior: "smooth" });
  } else {
    alert("Clave incorrecta.");
  }
});

// üîπ Guardar veh√≠culo
document.getElementById("guardarVehiculo").addEventListener("click", () => {
  const rut = document.getElementById("rut").value.trim();
  const nombre = document.getElementById("nombre").value.trim();
  const placa = document.getElementById("placa").value.trim();
  const marca = document.getElementById("marca").value.trim();
  const modelo = document.getElementById("modelo").value.trim();
  const color = document.getElementById("color").value.trim();
  const anio = document.getElementById("anio").value;

  if ([rut, nombre, placa, marca, modelo, color, anio].some(v => v === "")) {
    alert("Por favor, complete todos los campos.");
    return;
  }

  const vehiculos = JSON.parse(localStorage.getItem("vehiculos")) || [];
  vehiculos.push({ rut, nombre, placa, marca, modelo, color, anio });
  localStorage.setItem("vehiculos", JSON.stringify(vehiculos));

  document.querySelectorAll("#formVehiculo input").forEach(i => i.value = "");

  actualizarTabla();
  formVehiculo.style.display = "none";
  tabla.scrollIntoView({ behavior: "smooth" });
});

// üîπ Buscar veh√≠culo
btnBuscar.addEventListener("click", () => {
  const busqueda = prompt("Ingrese RUT, placa, nombre o modelo a buscar:") || "";
  actualizarTabla(busqueda);
});

// üîπ Cargar tabla al iniciar
actualizarTabla();
</script>

</body>
