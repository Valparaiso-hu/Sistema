<div class="container">
  <h2>üöó Veh√≠culos Registrados (Civiles)</h2>

  <!-- Botones -->
  <div style="text-align:center;">
    <button class="btn" id="btnRegistrar">Registrar veh√≠culo</button>
    <button class="btn btn-search" id="btnBuscar">üîç Buscar veh√≠culo</button>
  </div>

  <!-- Formulario -->
  <div class="form-container" id="formVehiculo">
    <h3>Formulario de veh√≠culo</h3>

    <label>RUT:</label>
    <input type="text" id="rut" placeholder="Ej: 12345678-9">

    <label>Nombre:</label>
    <input type="text" id="nombre" placeholder="Nombre del propietario">

    <label>Placa:</label>
    <input type="text" id="placa" placeholder="Ej: ABC123">

    <label>Marca:</label>
    <input type="text" id="marca" placeholder="Ej: Toyota">

    <label>Modelo:</label>
    <input type="text" id="modelo" placeholder="Ej: Yaris">

    <label>Color:</label>
    <input type="text" id="color" placeholder="Ej: Blanco">

    <label>A√±o:</label>
    <input type="number" id="anio" placeholder="Ej: 2020">

    <button class="btn" id="guardarVehiculo">Guardar veh√≠culo</button>
  </div>

  <!-- Tabla -->
  <table id="tablaVehiculos">
    <tr>
      <th>RUT</th>
      <th>Nombre</th>
      <th>P.P.U</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Color</th>
      <th>A√±o</th>
      <th>Acciones</th>
    </tr>
  </table>
